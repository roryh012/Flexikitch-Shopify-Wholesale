<section class="section" data-section-id="{{ section.id }}" data-section-type="html">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <header class="section__header">
        <h2 class="section__title heading h3">{{ section.settings.title | escape }}</h2>
      </header>
    {%- endif -%}

    <div class="html rte">
      {%- if product -%}
        {% capture p_specifications -%}
        <h4>Specifications</h4><p>xxxx</p>
        {% endcapture -%}
        {% capture p_warranty -%}
        <h4>Specifications</h4><p>xxxx</p>
        {% endcapture -%}
        {{- section.settings.html | replace: "[specifications]", p_specifications  | replace: "[warranty]", p_warranty -}}
      {%- else-%}
        {{ section.settings.html }}
      {%- endif-%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom HTML",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Your title"
    },
    {
      "type": "html",
      "id": "html",
      "label": "HTML",
      "default": "<p>Write or copy/paste HTML code</p>"
    }
  ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Custom HTML"
    }
  ]
}
{% endschema %}